- @listings.each do |l|
  .listing
    .container-fluid
      .row
        .col-md-12
          .row
            .col-md-12
              .name
                %h3
                  = l.title
          .row
            .col-md-4
              %p.date
                = l.created_at.strftime("%F %H:%M")
            .col-md-8
              %p.category
                category (hardcoded)
          .row
            .col-md-4
              = image_tag l.picture, width: 300, class: 'img-responsive'
            .col-md-8
              .row
                .col-md-12
                  %p
                    = l.description
              .row
                .col-md-6
                  .price
                    %p
                      = number_to_currency(l.price, :unit => "â‚¬")
                .col-md-6
                  .pull-right
                    %button.btn.btn-warning{:type => "button"}
                      = t('contact')
