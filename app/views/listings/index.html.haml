- @listings.each do |l|
  .listing
    .container-fluid
      .row
        .col-md-12
          .row
            .col-md-12
              .name
                %h3
                  = l.title
          .row
            .col-md-2
              %p.date
                = l.created_at.strftime("%F %H:%M")
            .col-md-10
              %p.category
                %span.badge
                  = l.category.name
          .row
            .col-md-4
              = image_tag l.picture, width: 300, class: 'img-responsive'
            .col-md-8
              .row
                .col-md-12
                  %p
                    = l.description
              .row
                .col-md-6
                  .price
                    %p
                      = number_to_currency(l.price, :unit => "â‚¬")
                .col-md-6
                  .pull-right
                    - if user_signed_in?
                      %button.btn.btn-warning{ data: { do: "showContactModal", id: l.id}}  
                        = t("contact")

                    - else
                      = button_to t("contact"), new_user_session_path, class: "btn btn-warning", method: :get


= render partial: '/modals/contact'
